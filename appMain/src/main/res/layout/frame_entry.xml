<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/frame_entry"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@id/buttons"
             android:layout_below="@id/setup_title"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:layout_marginBottom="20dp"
             android:layout_marginTop="20dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frame_login"
        android:layout_width="@dimen/setup_frame_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/first_name"
            style="@style/EntryText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/entry_hint_first_name"
            android:inputType="textCapWords"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/last_name"
            style="@style/EntryText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/entry_hint_last_name"
            android:inputType="textCapWords"
            android:maxLines="1"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frame_new_entry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/setup_frame_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/entry_simple"
            style="@style/EntryText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

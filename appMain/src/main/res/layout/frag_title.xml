<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.cartlc.tracker.viewmodel.TitleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_title_text"
            style="@style/SetupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{viewModel.title}"
            app:layout_constraintTop_toBottomOf="@id/logo"
            tools:text="@string/title_login" />

        <TextView
            android:id="@+id/sub_title"
            style="@style/SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@{viewModel.subTitle}"
            android:visibility="@{viewModel.subTitle != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/main_title_text"
            tools:text="Sub Title" />

        <View
            android:id="@+id/main_title_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:visibility="@{viewModel.showSeparator ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/sub_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>